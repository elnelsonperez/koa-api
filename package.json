{
  "name": "koa-api",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "lint": "tslint --project tsconfig.json --format stylish",
    "build": "tsc",
    "serve": "ts-node -r tsconfig-paths/register src/server.ts",
    "start": "nodemon",
    "test": "jest -u"
  },
  "jest": {
    "moduleNameMapper": {
      "@app(.*)$": "<rootDir>/src/app$1",
      "@src(.*)$": "<rootDir>/src$1"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/__tests__/**/*.+(ts|tsx|js)"
    ]
  },
  "devDependencies": {
    "@types/faker": "^4.1.5",
    "@types/http-status-codes": "^1.2.0",
    "@types/jest": "^24.0.18",
    "@types/koa": "^2.0.50",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-logger": "^3.1.1",
    "@types/koa-router": "^7.0.42",
    "@types/node": "^12.7.8",
    "@types/supertest": "^2.0.8",
    "faker": "^4.1.0",
    "http-status-codes": "^1.3.2",
    "jest": "^24.9.0",
    "koa": "^2.8.1",
    "koa-bodyparser": "^4.2.1",
    "koa-logger": "^3.2.1",
    "koa-router": "^7.4.0",
    "nodemon": "^1.19.2",
    "reflect-metadata": "^0.1.13",
    "supertest": "^4.0.2",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.4.1",
    "tslint": "^5.20.0",
    "tslint-config-airbnb": "^5.11.2",
    "typescript": "^3.6.3"
  },
  "dependencies": {
    "sql.js": "^1.0.0",
    "tsconfig-paths": "^3.9.0",
    "typeorm": "^0.2.19"
  }
}
